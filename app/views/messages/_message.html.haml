.message
  .upper-message
    %p.upper-message__user-name
      = message.user.name
    %p.upper-message__date
      = message.created_at.strftime("%Y/%m/%d/ %H:%M:%S")
  .lower-message
    %p.lower-message__content
      - if message.content.present?
        = message.content
.message-image
  - if message.image.present?
    = image_tag(message.image)